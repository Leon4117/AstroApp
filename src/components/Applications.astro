---
// Importa iconos SVG o imágenes para cada aplicación
import image1 from '../assets/image1.png';
import image2 from '../assets/image2.png';
import image3 from '../assets/image3.png';
import image4 from '../assets/image4.png';
import image5 from '../assets/image5.png';
import image6 from '../assets/image6.png';
import { Image } from 'astro:assets';

const applications = [
	{
		name: "image1",
		icon: image1,
	},
	{
		name: "image2",
		icon: image2,
	},
	{
		name: "image3",
		icon: image3,
	},
	{
		name: "image4",
		icon: image4,
	},
	{
		name: "image5",
		icon: image5,
	},
	{
		name: "image6",
		icon: image6,
	},
];
---

<section id="solutions" class="py-16 lg:py-24 bg-gray-950 w-full">
	<div class="w-full px-4 text-center">
		<h2 class="text-4xl font-bold text-white mb-12">Soluciones para cada industria</h2>
		<div class="w-full">
			<div class="slider-container w-full">
				<div class="slider w-full">
					<div class="slide-track">
						{applications.map((app) => (
							<div class="slide">
								<Image 
									src={app.icon} 
									alt={app.name} 
									class="max-w-[400px] h-[168px] mx-auto"
									loading="lazy"
								/>
							</div>
						))}
						{/* Duplicar los slides para creara el efecto infinito */}
						{applications.map((app) => (
							<div class="slide">
								<Image 
									src={app.icon} 
									alt={app.name}
									class="max-w-[400px] h-[168px] mx-auto"
									loading="lazy"
								/>
							</div>
						))}
					</div>
				</div>
			</div>
		</div>
	</div>
</section>