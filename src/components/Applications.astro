---
// Importa iconos SVG o imágenes para cada aplicación
import manufacturingIcon from '../assets/icon-manufacturing.svg';
import logisticsIcon from '../assets/icon-logistics.svg';
import healthcareIcon from '../assets/icon-healthcare.svg';
import automotiveIcon from '../assets/icon-automotive.svg';
import { Image } from 'astro:assets';

const applications = [
	{
		name: "Manufactura",
		description: "Control de calidad, ensamblaje, trazabilidad.",
		icon: manufacturingIcon,
	},
	{
		name: "Logística y Almacenamiento",
		description: "Identificación, clasificación, verificación de paquetes.",
		icon: logisticsIcon,
	},
	{
		name: "Salud y Farmacéutica",
		description: "Inspección de empaques, control de dosificación.",
		icon: healthcareIcon,
	},
	{
		name: "Automotriz",
		description: "Inspección de componentes, ensamblaje de piezas.",
		icon: automotiveIcon,
	},
];
---

<section id="solutions" class="py-16 lg:py-24 bg-gray-950">
	<div class="container mx-auto px-4 text-center">
		<h2 class="text-4xl font-bold text-white mb-12">Soluciones Para Cada Industria</h2>
		<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
			{applications.map((app) => (
				<div class="bg-gray-800 rounded-lg shadow-xl p-6 flex flex-col items-center">
					<div class="mb-4 w-16 h-16 flex items-center justify-center bg-[#8bb303] rounded-full text-white text-3xl">
						<Image src={app.icon} alt={app.name} width={40} height={40} />
					</div>
					<h3 class="text-2xl font-semibold text-white mb-2">{app.name}</h3>
					<p class="text-gray-300">{app.description}</p>
				</div>
			))}
		</div>
	</div>
</section>